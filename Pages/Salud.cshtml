@page
@model SaludModel
@{
    ViewData["Title"] = "Salud";
}

<section class="probootstrap-section">
  <div class="container">
    <div class="row">
      <div class="col-md-12 text-center section-heading">
        <h2>Salud</h2>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <form method="post" class="probootstrap-form probootstrap-form-box" id="my-form" >
          <div class="form-group">
            <label for="username">Enfermedad Crónica</label>
            <input type="text" name="username"  class="form-control" required>
          </div>
          <div class="form-group">
            <label for="username">Años con la enfermedad</label>
            <input type="text" name="username"  class="form-control" required>
          </div>
          <div class="form-group">
            <label for="username">Centro de salud</label>
            <input type="text" name="username"  class="form-control" required>
          </div>
          <div class="form-group">
            <label for="username">Aseguradora Actual</label>
            <input type="text" name="username"  class="form-control" required>
          </div>
          <div class="form-group mb50">
            <input type="submit" value="Guardar" class="btn btn-primary btn-block">
          </div>
        </form>
      </div>
    </div>
  </div>
</section>

<script type="text/javascript" src="~/lib/jquery/dist/jquery.js"></script>

<script>

    $(function() {
    $('#my-form').on('submit', function(e) { 
        e.preventDefault();
        window.location.href="/Datos";		
        });
    });
    
</script>